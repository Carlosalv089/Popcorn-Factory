<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/black"
    tools:context=".DetallePelicula">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_pelicula_img"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:scaleType="centerCrop"
            android:src="@drawable/bighero6"/>

        <TextView
            android:id="@+id/tv_titulo_detalle_pelicula"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="BIG HERO"
            android:textColor="@color/color_boton"
            android:gravity="center"
            android:textSize="25sp"
            />

        <TextView
            android:id="@+id/tv_descripcion_pelicula"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hola esta es la descripcion general de lo que va a ser esta cosa jejeje muchas gracias nos vemos"
            android:textColor="@color/color_letra"
            android:layout_margin="25dp"
            android:textSize="15sp"/>
    </LinearLayout>

</LinearLayout>